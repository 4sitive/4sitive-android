<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.positive.daymotion">
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	
	<application
		android:name="org.positive.daymotion.DmApplication"
		android:allowBackup="true"
		android:fullBackupContent="false"
		android:label="@string/app_name"
		android:icon="@mipmap/app_icon"
		android:roundIcon="@mipmap/app_icon_round"
		android:supportsRtl="false"
		android:theme="@style/AppTheme">
		
		<activity
			android:name="org.positive.daymotion.presentation.start.StartActivity"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="org.positive.daymotion.presentation.dispatch.DispatchActivity"
			android:launchMode="singleTask"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				
				<data android:scheme="positive" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="org.positive.daymotion.presentation.login.LoginActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.root.RootActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.main.MainActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.feed.FeedActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.category.activity.CategoryDetailActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.my.activity.MyProfileEditActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		
		<activity
			android:name="org.positive.daymotion.presentation.setting.PrivacyPolicyActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.setting.ServiceTermsActivity"
			android:screenOrientation="portrait" />
		
		<activity
			android:name="org.positive.daymotion.presentation.upload.MissionUploadActivity"
			android:screenOrientation="portrait" />
	
	</application>

</manifest>