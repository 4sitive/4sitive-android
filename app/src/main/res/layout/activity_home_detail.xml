<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		<variable
			name="viewModel"
			type="org.positive.daymotion.presentation.home.HomeDetailViewModel" />
		
		<variable
			name="handler"
			type="org.positive.daymotion.presentation.home.HomeDetailActivity.Handler" />
	</data>
	
	<LinearLayout xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/_F8F9FB"
		android:orientation="vertical"
		tools:context=".presentation.home.HomeDetailActivity">
		
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:overScrollMode="never">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="398dp"
					android:background="#CCCCCC">
					
					<ImageView
						android:id="@+id/backButton"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginStart="10dp"
						android:layout_marginTop="7dp"
						android:fontFamily="@font/fontawesome4_7"
						android:gravity="center"
						android:src="@drawable/ic_title_back_white"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<TextView
						android:id="@+id/missionTextView"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="68dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/cardBigImageView"
						android:layout_width="202dp"
						android:layout_height="204dp"
						android:background="@drawable/home_card_big_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
					
					<ImageView
						android:id="@+id/cardSmallImageView"
						android:layout_width="159dp"
						android:layout_height="159dp"
						android:background="@drawable/home_card_small_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
					
					<Button
						android:id="@+id/uploadButton"
						android:layout_width="137dp"
						android:layout_height="44dp"
						android:layout_marginStart="40dp"
						android:layout_marginBottom="47dp"
						android:background="@drawable/background_upload_btn"
						android:fontFamily="@font/kopub_dotum_bold"
						android:letterSpacing="-0.02"
						android:text="참여하기"
						android:textColor="@color/_171717"
						android:textSize="18dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="102dp"
					android:layout_marginBottom="101dp">
					
					<ImageView
						android:id="@+id/emptyImageView"
						android:layout_width="59dp"
						android:layout_height="89dp"
						android:src="@drawable/ic_home_empty"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="24dp"
						android:alpha="0.3"
						android:fontFamily="@font/kopub_dotum_bold"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="6dp"
						android:text="0피드! 어서 참여해줘!"
						android:textColor="@color/_171717"
						android:textSize="16dp"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@id/emptyImageView" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</LinearLayout>
		
		</ScrollView>
	
	</LinearLayout>


</layout>