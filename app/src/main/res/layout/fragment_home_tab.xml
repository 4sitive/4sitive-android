<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		<variable
			name="viewModel"
			type="org.positive.daymotion.presentation.home.HomeTabViewModel" />
	</data>
	
	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background_home"
		android:overScrollMode="never"
		android:scrollbars="none">
		
		<LinearLayout
			android:id="@+id/profileLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="20dp"
			android:paddingTop="33dp"
			android:paddingEnd="20dp"
			android:paddingBottom="106dp">
			
			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="22dp"
				android:paddingStart="12dp"
				android:paddingEnd="12dp">
				
				<TextView
					android:id="@+id/titleTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="7dp"
					android:fontFamily="@font/kopub_dotum_medium"
					android:letterSpacing="-0.02"
					android:lineSpacingExtra="7dp"
					android:text="민정님, Hello!"
					android:textColor="@color/_000000"
					android:textSize="17dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="7dp"
					android:alpha="0.5"
					android:fontFamily="@font/kopub_dotum_medium"
					android:letterSpacing="-0.01"
					android:text="오늘 하루를 나눠봐요"
					android:textColor="@color/_000000"
					android:textSize="14dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent" />
				
				<ImageView
					android:layout_width="54dp"
					android:layout_height="54dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcWithCircle="@{@drawable/ic_tmp_profile}" />
			
			</androidx.constraintlayout.widget.ConstraintLayout>
			
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/homeMissionCard1"
				android:layout_width="match_parent"
				android:layout_height="375dp"
				android:checkable="true"
				android:clickable="true"
				android:focusable="true"
				android:theme="@style/Theme.MaterialComponents.Light"
				android:transitionName="imageTransition"
				app:cardBackgroundColor="#CCCCCC"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/CardLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					
					<TextView
						android:id="@+id/missionTextView1"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/cardBigImageView1"
						android:layout_width="200dp"
						android:layout_height="185dp"
						android:background="@drawable/home_card_big_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
					
					<ImageView
						android:id="@+id/cardSmallImageView1"
						android:layout_width="150dp"
						android:layout_height="140dp"
						android:background="@drawable/home_card_small_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/homeMissionCard2"
				android:layout_width="match_parent"
				android:layout_height="375dp"
				android:layout_marginTop="30dp"
				android:checkable="true"
				android:clickable="true"
				android:focusable="true"
				android:theme="@style/Theme.MaterialComponents.Light"
				app:cardBackgroundColor="#CCCCCC"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					
					<TextView
						android:id="@+id/missionTextView2"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/cardBigImageView2"
						android:layout_width="200dp"
						android:layout_height="185dp"
						android:background="@drawable/home_card_big_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
					
					<ImageView
						android:id="@+id/cardSmallImageView2"
						android:layout_width="150dp"
						android:layout_height="140dp"
						android:background="@drawable/home_card_small_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/homeMissionCard3"
				android:layout_width="match_parent"
				android:layout_height="375dp"
				android:layout_marginTop="30dp"
				android:checkable="true"
				android:clickable="true"
				android:focusable="true"
				android:theme="@style/Theme.MaterialComponents.Light"
				app:cardBackgroundColor="#CCCCCC"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					
					<TextView
						android:id="@+id/missionTextView3"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/cardBigImageView3"
						android:layout_width="200dp"
						android:layout_height="185dp"
						android:background="@drawable/home_card_big_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
					
					<ImageView
						android:id="@+id/cardSmallImageView3"
						android:layout_width="150dp"
						android:layout_height="140dp"
						android:background="@drawable/home_card_small_image"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</com.google.android.material.card.MaterialCardView>
		
		</LinearLayout>
	
	</ScrollView>

</layout>
