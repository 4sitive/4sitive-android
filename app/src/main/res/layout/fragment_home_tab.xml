<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		<import type="java.util.List" />
		
		<import type="org.positive.daymotion.presentation.home.model.MissionViewItem" />
		
		<import type="androidx.core.content.ContextCompat" />
		
		<variable
			name="missionItems"
			type="List&lt;MissionViewItem>" />
		
		<variable
			name="handler"
			type="org.positive.daymotion.presentation.home.fragment.HomeTabFragment.Handler" />
		
		<variable
			name="viewModel"
			type="org.positive.daymotion.presentation.home.viewmodel.HomeTabViewModel" />
	</data>
	
	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background_home"
		android:overScrollMode="never"
		android:scrollbars="none">
		
		<LinearLayout
			android:id="@+id/profileLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="20dp"
			android:paddingTop="33dp"
			android:paddingEnd="20dp"
			android:paddingBottom="106dp">
			
			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="22dp"
				android:paddingStart="12dp"
				android:paddingEnd="12dp">
				
				<TextView
					android:id="@+id/greetingTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="7dp"
					android:fontFamily="@font/kopub_dotum_medium"
					android:letterSpacing="-0.02"
					android:lineSpacingExtra="7dp"
					android:text="민정님, Hello!"
					android:textColor="@color/_000000"
					android:textSize="17dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="7dp"
					android:alpha="0.5"
					android:fontFamily="@font/kopub_dotum_medium"
					android:letterSpacing="-0.01"
					android:text="오늘 하루를 나눠봐요"
					android:textColor="@color/_000000"
					android:textSize="14dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent" />
				
				<ImageView
					android:layout_width="54dp"
					android:layout_height="54dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcWithCircle="@{@drawable/ic_tmp_profile}" />
			
			</androidx.constraintlayout.widget.ConstraintLayout>
			
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:focusableInTouchMode="false"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/homeMissionCard1"
					android:layout_width="match_parent"
					android:layout_height="375dp"
					android:background="@{ContextCompat.getDrawable(context, viewModel.todayMissions[0].background)}"
					android:clickable="true"
					android:focusable="true"
					android:onClick="@{() -> handler.sendSubject(viewModel.todayMissions[0])}">
					
					<TextView
						android:id="@+id/missionTextView1"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:maxLines="3"
						android:text="@{viewModel.todayMissions[0].content}"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/CardEffectImageView1"
						android:layout_width="0dp"
						android:layout_height="268dp"
						android:scaleX="1.2"
						android:scaleY="1.2"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:src="@{viewModel.todayMissions[0].effect}" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:focusable="false"
				android:focusableInTouchMode="false"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/homeMissionCard2"
					android:layout_width="match_parent"
					android:layout_height="375dp"
					android:background="@{ContextCompat.getDrawable(context, viewModel.todayMissions[1].background)}"
					android:clickable="true"
					android:focusable="true"
					android:onClick="@{() -> handler.sendSubject(viewModel.todayMissions[1])}">
					
					<TextView
						android:id="@+id/missionTextView2"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:maxLines="3"
						android:text="@{viewModel.todayMissions[1].content}"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/CardEffectImageView2"
						android:layout_width="0dp"
						android:layout_height="268dp"
						android:scaleX="1.2"
						android:scaleY="1.2"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:src="@{viewModel.todayMissions[1].effect}" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:focusable="false"
				android:focusableInTouchMode="false"
				app:cardCornerRadius="8dp">
				
				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/homeMissionCard3"
					android:layout_width="match_parent"
					android:layout_height="375dp"
					android:background="@{ContextCompat.getDrawable(context, viewModel.todayMissions[2].background)}"
					android:clickable="true"
					android:focusable="true"
					android:onClick="@{() -> handler.sendSubject(viewModel.todayMissions[2])}">
					
					<TextView
						android:id="@+id/missionTextView3"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="40dp"
						android:layout_marginTop="44dp"
						android:fontFamily="@font/kopub_dotum_medium"
						android:letterSpacing="-0.01"
						android:lineSpacingExtra="8dp"
						android:maxLines="3"
						android:text="@{viewModel.todayMissions[2].content}"
						android:textColor="@color/_FFFFFF"
						android:textSize="32dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
					
					<ImageView
						android:id="@+id/CardEffectImageView3"
						android:layout_width="0dp"
						android:layout_height="268dp"
						android:scaleX="1.2"
						android:scaleY="1.2"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:src="@{viewModel.todayMissions[2].effect}" />
				
				</androidx.constraintlayout.widget.ConstraintLayout>
			
			</androidx.cardview.widget.CardView>
		
		</LinearLayout>
	
	</ScrollView>

</layout>
