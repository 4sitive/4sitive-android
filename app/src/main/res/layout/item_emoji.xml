<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="handler"
			type="org.positive.daymotion.presentation.feed.FeedActivity.Handler" />
		
		<variable
			name="item"
			type="org.positive.daymotion.presentation.feed.model.EmojiItem.Emoji" />
	</data>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:drawablePadding="4dp"
		android:gravity="center"
		android:onClick="@{() -> handler.updateLikes()}"
		android:padding="6dp"
		android:text="@{item.count}"
		android:textSize="10dp"
		app:drawableStartCompat="@drawable/ic_tmp_thumb_up"
		app:useWhitePressEffect="@{true}"
		tools:text="0" />
</layout>