<resources>
	
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:statusBarColor">@color/transparent</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:navigationBarColor">@color/transparent</item>
		<item name="colorPrimary">@color/_171717</item>
		<item name="colorPrimaryDark">@color/_171717</item>
		<item name="colorAccent">@color/_171717</item>
		<item name="android:textViewStyle">@style/TextStyle</item>
	</style>
	
	<style name="TextStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/colorGray900</item>
		<item name="android:textColorHint">@color/colorGray400</item>
	</style>

	<style name="CommonDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:windowBackground">@drawable/background_dialog</item>
		<item name="android:windowMinWidthMinor">83%</item>
	</style>

</resources>
